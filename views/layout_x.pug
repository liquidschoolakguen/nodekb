doctype html
html
    head
        title Knowledgebase
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')

    body
        nav.navbar.navbar-expand-md.navbar-dark.bg-dark
            .navbar-collapse.collapse.w-100.order-1.order-md-0.dual-collapse2
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='/')| Home
                    li.nav-item
                        a.nav-link(href='/articles/add') Add Articlesss
            .mx-auto.order-0
                a.navbar-brand.mx-auto(href='#') Knowledgebase
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='.dual-collapse2')
                    span.navbar-toggler-icon
            .navbar-collapse.collapse.w-100.order-3.dual-collapse2
                ul.navbar-nav.ml-auto
                    li.nav-item
                        a.nav-link(href='/users/register') Register
                    li.nav-item
                        a.nav-link(href='/users/login') Login
        .container
                    != messages('message', locals)
                    if errors
                        each error, i in errors
                            div(class="alert, alert-danger") #{error.msg}
                    block content
                    br
                    hr
                    footer
                        p Copyright &copy; 2020

        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')  
        script(src='/js/main.js')      